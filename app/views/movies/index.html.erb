<h2>All Movies</h2>

<%#  Part 2: Start here... %>

<% titleClass = @sort=="title" ? "hilite text-dark" : "" %>
<% releaseClass = @sort=="release_date" ? "hilite text-dark" : "" %>

<%= form_tag movies_path, id:"ratings_form", :method => :get do %>
  <% @all_ratings.each do |rating| %>
    <%= rating %>
    <%= check_box_tag "ratings[#{rating}]", id="ratings_#{rating}", checked=(@rat.include? rating) %>
  <% end %>
  <%= submit_tag 'Refresh', :class => 'btn btn-primary', id:"ratings_submit" %>
  
<% end %>

<table class="table table-striped col-md-12" id="movies">
  <thead>
    <tr>
      <th class="<%= titleClass %>"><%= link_to 'Movie Title', movies_path(sort: "title", id: "title_header") %></th>
      <th>Rating</th>
      <th class="<%= releaseClass %>"><%= link_to 'Release Date', movies_path(sort: "release_date", id: "release_date_header") %></th>
      <th>More Info</th>
    </tr>
  </thead>
  <tbody>
    <% @movies.each do |movie| %>
      <tr>
        <td>
          <%= movie.title %>
        </td>
        <td>
          <%= movie.rating %>
        </td>
        <td>
          <%= movie.release_date %>
        </td>
        <td>
          <%= link_to "More about #{movie.title}", movie_path(movie) %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
<%= link_to 'Add new movie', new_movie_path, :class => 'btn btn-primary' %>

